<?xml version="1.0" encoding="utf-8" ?>
<vbox>
	<hbox>
		<grid columns="3">
			<text text="Direction" />
			<list id="direction" text="Horizontal" styleName="propControl">
				<array>Horizontal,Vertical</array>
			</list>
			<spacer />
			
			<text text="Width" />
			<hslider id="width" max="200" pos="100" styleName="propControl"/>
			<text id="widthLabel" text="???" width="30" />
			
			<text text="Height" />
			<hslider id="height" max="200" pos="20" styleName="propControl"/>
			<text id="heightLabel" text="???" width="30" />
			
			<text text="Min" />
			<hslider id="min" max="100" pos="0" styleName="propControl"/>
			<text id="minLabel" text="???" width="30" />
			
			<text text="Max" />
			<hslider id="max" max="200" pos="100" styleName="propControl"/>
			<text id="maxLabel" text="???" width="30" />
			
			<text text="Pos" />
			<hslider id="pos" max="100" pos="0" styleName="propControl"/>
			<text id="posLabel" text="???" width="30" />
		</grid>
		<spacer width="20" />
		<hscroll id="theScroll" pos="50" />
	</hbox>
</vbox>