<?xml version="1.0" encoding="utf-8" ?>
<vbox>
	<hbox>
		<grid columns="2">
			<text text="Direction" />
			<listSelector id="direction" text="Horizontal" width="150" autoSize="false">
				<array>Horizontal,Vertical</array>
			</listSelector>
			
			<text text="Width" />
			<hslider id="width" max="200" pos="100" width="150"/>
			
			<text text="Height" />
			<hslider id="height" max="200" pos="20" width="150"/>
			
			<text text="Min" />
			<hslider id="min" max="100" pos="0" width="150"/>
			
			<text text="Max" />
			<hslider id="max" max="200" pos="100" width="150"/>
			
			<text text="Pos" />
			<hslider id="pos" max="100" pos="0" width="150"/>
		</grid>
		<spacer width="20" />
		<hslider id="theScroll" />
	</hbox>
</vbox>