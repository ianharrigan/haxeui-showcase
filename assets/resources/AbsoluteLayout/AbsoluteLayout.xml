<?xml version="1.0" encoding="utf-8" ?>
<vbox>
	<hbox>
		<grid columns="2">
			<text text="Child" />
			<list id="child" text="Button1" verticalAlign="top" selectedIndex="0" width="150">
				<array>Button1,Button2,Button3,Button4</array>
			</list>
			
			<text text="Left" />
			<hslider id="childLeft" max="200" pos="0" width="150"/>
			
			<text text="Top" />
			<hslider id="childTop" max="200" pos="0" width="150"/>
			
			<text text="Width" />
			<hslider id="childWidth" max="200" pos="100" width="150"/>
			
			<text text="Height" />
			<hslider id="childHeight" max="200" pos="100" width="150"/>
		</grid>
		<spacer width="20" />
		<box layout="absolute">
			<button id="Button1" x="0" y="0" text="1" width="100" height="100" />
			<button id="Button2" x="60" y="60" text="2" width="100" height="100" />
			<button id="Button3" x="0" y="120" text="3" width="100" height="100" />
			<button id="Button4" x="60" y="180" text="4" width="100" height="100" />
		</box>
	</hbox>
</vbox>